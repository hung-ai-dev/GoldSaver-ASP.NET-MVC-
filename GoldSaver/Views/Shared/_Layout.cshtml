@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="row">
        <div class="col s2" id="sidebar">
            <ul id="slide-out" class="side-nav fixed">
                <li>
                    <div class="userView">
                        <img id="avatar" src="~/Content/image/Wallpaer-HD(5).jpg" class="circle" alt="">
                        <a id="user-name" href="#!name"><span class="white-text name">@User.Identity.Name</span></a>
                    </div>
                </li>

                <li><a class="waves-effect" href="~/ActivityLog"><i class="material-icons">history</i>Activity Log</a></li>
                <li><a class="waves-effect" href="~/Wallet"><i class="material-icons">account_balance_wallet</i>Wallet</a></li>
                <li><a class="waves-effect" href="#"><i class="material-icons">attach_money</i>Loan/Borrow</a></li>
                <li><a class="waves-effect" href="#"><i class="material-icons">monetization_on</i>Saving</a></li>
                <li><a class="waves-effect" href="#"><i class="material-icons">storage</i>Category</a></li>
                <li>
                    <div class="divider"></div>
                </li>
                <li><a class="waves-effect" href="#"><i class="material-icons">face</i>Account</a></li>
                <li>
                    <div class="divider"></div>
                </li>
                <li><a class="waves-effect" href="#"><i class="material-icons">settings</i>Setting</a></li>
                <li><a class="waves-effect" href="#"><i class="material-icons">help</i>Help</a></li>
                <li><a class="waves-effect" href="#">About us</a></li>
            </ul>
        </div>
        <div class="row">
            <nav>
                <div class="nav-wrapper">
                    
                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "right" }))
                    {
                        @Html.AntiForgeryToken()
                        <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                    }

                    <a href="#" data-activates="slide-out" class="button-collapse"><i class="material-icons">menu</i></a>
                    <ul id="nav-mobile" class="left hide-on-med-and-down">
                        <li><a href="#">Hello @User.Identity.Name</a></li>
                    </ul>
                </div>
            </nav>
        </div>

        <div class="col s10 offset-s2" id="main">
            @RenderBody()
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/material")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $(document).ready(function () {
            $(".button-collapse").sideNav();
        });
    </script>
</body>
</html>
