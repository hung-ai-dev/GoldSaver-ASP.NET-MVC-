
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Home/Index.cshtml";
}
@model GoldSaver.Models.RegisterViewModel

<div id="register" class="col s4 offset-s7">
    <h5 class="col s12" id="register-name">
        REGISTER
        <span class="">
            <a href="~/Home/Index" class="register-btn btn-floating" id="reg-to-log">
                <i class="large material-icons">clear</i>
            </a>
        </span>
    </h5>


    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "col s12", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.UserName, new { @class = "validate", type = "text" })
                <label for="user_name">User Name</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.Email, new { @class = "validate", type = "email" })
                <label for="email">Email</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                @Html.PasswordFor(m => m.Password, new { @class = "validate", type = "password" })
                <label for="password">Password</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "validate", type = "password" })
                <label for="confirm_password">Confirm Password</label>
            </div>
        </div>
        <div class="center-button">
            <button id="reg-btn" class="btn waves-effect waves-light" type="submit">
                REGISTER
            </button>
        </div>
    }

</div>